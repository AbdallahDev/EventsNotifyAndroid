<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <!-- event title layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title_precedent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/row_tv_title_precedent"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="@string/row_tv_title" />
    </LinearLayout>

    <!-- event subject layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_subject_precedent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/row_tv_subject_precedent"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="@string/row_tv_subject" />

    </LinearLayout>

    <!-- event date layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date_precedent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/row_tv_date_precedent"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="@string/row_tv_date" />
    </LinearLayout>

    <!-- event time layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time_precedent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/row_tv_time_precedent"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="@string/row_tv_time" />
    </LinearLayout>

    <!-- event separator line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/row_tv_line_separator"
            android:textAlignment="center" />
    </LinearLayout>
</LinearLayout>